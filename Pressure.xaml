<Page x:Class="In_Extremis.Editor.Pressure"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:In_Extremis.Editor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pressure">

   <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
      <local:PressureCanvas Radius="10">
         <local:PressureCanvas.Gradient>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
               <GradientStop Color="SaddleBrown" Offset="0.0"/>
               <GradientStop Color="DarkRed" Offset="0.2"/>
               <GradientStop Color="Red" Offset="0.6"/>
               <GradientStop Color="Yellow" Offset="0.8"/>
               <GradientStop Color="White" Offset="1.0"/>
            </LinearGradientBrush>
         </local:PressureCanvas.Gradient>
      </local:PressureCanvas>
   </Grid>
</Page>
